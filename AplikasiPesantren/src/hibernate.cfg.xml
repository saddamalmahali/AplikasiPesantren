<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/aplikasi_pesantren?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">Bangga</property>
    <property name="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.hbm2ddl.auto">auto</property>
    
    <mapping class="org.aplikasipesantren.entiti.Kelas"/>
    <mapping class="org.aplikasipesantren.entiti.Kitab"/>    
    <mapping class="org.aplikasipesantren.entiti.Santri"/>    
    <mapping class="org.aplikasipesantren.entiti.Kamar"/>
    <mapping class="org.aplikasipesantren.entiti.Gedung"/>     
    <mapping class="org.aplikasipesantren.entiti.OrangTua"/>   
    <mapping class="org.aplikasipesantren.entiti.Pelajaran"/>
    
  </session-factory>
</hibernate-configuration>
